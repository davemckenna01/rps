extends layout

block content
	h1= title
	p Welcome to game #{gameId}

	div.player#host
		h2 Host
			span.inRoomIndicator
		span.readyStatus Not Ready

	div.player#guest
		h2 Guest
			span.inRoomIndicator
		span.readyStatus Not Ready


	div#actions
		
		h3 Player Actions

		span#ready Ready

		div#throws
			span#r Rock
			span#p Paper
			span#s Scissors
	
	div#gameStatus
		h3 Game status
		span Nothing Happening
		//or |In Progress
		//or |?

	div#countdown		

block append scripts
	script(src='/socket.io/socket.io.js')
	script(src='/javascripts/src/rps.js')