extends layout

block content
	h1= title
	p Welcome to game #{gameId}

	div.player#host
		h2 Host
			span.inRoomIndicator
		span.readyStatus Not Ready
		br
		span Hand: 
		span.hand --

	div.player#guest
		h2 Guest
			span.inRoomIndicator
		span.readyStatus Not Ready
		br
		span Hand: 
		span.hand --


	div#actions
		
		h3 Player Actions

		span#ready Ready

		div#throws
			span#r Rock
			span#p Paper
			span#s Scissors

	div#countdown
		h3 Countdown

block append scripts
	script(src='/socket.io/socket.io.js')
	script(src='/javascripts/src/rps.js')